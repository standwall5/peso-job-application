.takeExamContainer {
    padding: 2rem;
    max-width: 900px;
    margin: 0 auto;
}

.header {
    margin-bottom: 2rem;
    text-align: center;
}

.header h2 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 0.5rem;
}

.header p {
    color: #666;
    font-size: 1rem;
}

.questionsContainer {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.questionBlock {
    background: #f9f9f9;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.5rem;
}

.questionBlock h3 {
    font-size: 1.2rem;
    color: #333;
    margin-bottom: 1rem;
}

.choicesContainer {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.choiceLabel {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
}

.choiceLabel input[type="radio"],
.choiceLabel input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.paragraphInput {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
    font-family: inherit;
    resize: vertical;
}

.noQuestions {
    text-align: center;
    padding: 2rem;
    color: #999;
}

.submitButtonContainer {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
}
